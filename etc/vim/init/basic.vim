" File encoding
set fenc=utf-8
set encoding=UTF-8
" Don't create backup file
set nobackup
" Don't create swap file
set noswapfile
" Auto reload when editting file modify
set autoread
set hidden
set showcmd
set vb t_vb=
set expandtab
set tabstop=4
set shiftwidth=4
set wildmode=list:longest
set ignorecase
set smartcase
set incsearch
set wrapscan
set hlsearch
set timeoutlen=100
